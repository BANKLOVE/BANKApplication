<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ll_title_bg_header"
        >
        <ImageView
            android:id="@+id/btn_video_play_back_pressed_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_video_play_back_pressed"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="注册"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher_img"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@mipmap/cb_store_goods_types_noraml"
        >

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <ImageView
                android:id="@+id/accountnumber_register_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_account"
                />
            <TextView
                android:id="@+id/accountnumber_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/accountnumber_register_img"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="账号："
                />
            <EditText
                android:id="@+id/register_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/accountnumber_register"
                android:paddingLeft="10dp"
                android:background="@null"
                android:textSize="23sp"
                android:inputType="phone"
                android:hint="国内手机号"
                />
        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            />


        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <ImageView
                android:id="@+id/identifying_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_code"
                />
            <TextView
                android:id="@+id/identifying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/identifying_img"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="验证码："
                />
            <EditText
                android:id="@+id/send_identifying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/identifying"
                android:paddingLeft="10dp"
                android:background="@null"
                android:textSize="23sp"
                android:hint="验证码"
                />
            <TextView
                android:id="@+id/identy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@mipmap/btn_user_login_select"
                android:layout_toRightOf="@id/send_identifying"
                android:text="发送验证码"
                />
        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            />

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/password_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_pwd"
                />
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password_img"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="密码："
                />
            <EditText
                android:id="@+id/register_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password"
                android:paddingLeft="10dp"
                android:textSize="23sp"
                android:background="@null"
                android:hint="4-16位数字或字母"
                />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <TextView
            android:id="@+id/myRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@mipmap/btn_user_login_select"
            android:text="注册"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <ImageView
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/radio_btn_checked_green"
            />
        <TextView
            android:id="@+id/text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/radio_button"
            android:textSize="15sp"
            android:text="我已阅读并同意"
            />
        <TextView
            android:id="@+id/text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_one"
            android:textSize="15sp"
            android:textColor="#ee9a00"
            android:text="《年假旅行网络服务协议》"
            />
    </RelativeLayout>

</LinearLayout>
