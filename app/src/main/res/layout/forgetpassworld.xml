<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ll_title_bg_header"
        >
        <ImageView
            android:id="@+id/btn_video_play_back_pressed_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_video_play_back_pressed"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="忘记密码"
            />
        <TextView
            android:id="@+id/kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:text="客服"
            />
        <ImageView
            android:id="@+id/btn_contact"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@mipmap/btn_contact_select"
            android:layout_toLeftOf="@id/kefu"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher_img"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@mipmap/cb_store_goods_types_noraml"
        >

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <ImageView
                android:id="@+id/accountnumber_register_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_account"
                />
            <TextView
                android:id="@+id/accountnumber_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/accountnumber_register_img"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="手机号码："
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/accountnumber_register"
                android:paddingLeft="5dp"
                android:background="@null"
                android:textSize="23sp"
                android:hint="注册或绑定的手机"
                />
        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            />


        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

            <ImageView
                android:id="@+id/identifying_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_code"
                />
            <TextView
                android:id="@+id/identifying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/identifying_img"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="填写验证码："
                />
            <EditText
                android:id="@+id/send_identifying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/identifying"
                android:paddingLeft="5dp"
                android:background="@null"
                android:textSize="23sp"
                android:hint="验证码"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@mipmap/btn_user_login_select"
                android:layout_toRightOf="@id/send_identifying"
                android:text="发送验证码"
                />
        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            />

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/password_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_pwd"
                />
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password_img"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="新登录密码："
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password"
                android:paddingLeft="5dp"
                android:textSize="23sp"
                android:background="@null"
                android:hint="请输入新密码"
                />
        </RelativeLayout>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"
            />

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/password_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/iv_user_login_pwd"
                />
            <TextView
                android:id="@+id/password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password_img1"
                android:layout_centerInParent="true"
                android:textSize="23sp"
                android:paddingLeft="10dp"
                android:text="确认新密码："
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/password1"
                android:paddingLeft="5dp"
                android:textSize="23sp"
                android:background="@null"
                android:hint="请输入新密码"
                />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@mipmap/btn_user_login_select"
            android:text="重置密码"
            />
    </RelativeLayout>

</LinearLayout>
